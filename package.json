{
  "name": "forgekit-storybook-mcp",
  "version": "0.5.2",
  "description": "MCP server for Storybook story generation, component analysis, and validation",
  "author": "Rich Tillman <richtillman@gmail.com>",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "forgekit-storybook-mcp": "dist/cli.js",
    "storybook-mcp": "dist/cli.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup src/index.ts src/cli.ts --format esm --dts --clean",
    "prepublishOnly": "npm run build",
    "dev": "tsup src/index.ts src/cli.ts --format esm --watch",
    "start": "node dist/cli.js",
    "typecheck": "tsc --noEmit",
    "publish:npm": "npm publish --access public",
    "release": "npm run build && npm publish --access public",
    "version:patch": "npm version patch -m \"chore(release): %s\"",
    "version:minor": "npm version minor -m \"chore(release): %s\"",
    "version:major": "npm version major -m \"chore(release): %s\"",
    "release:patch": "npm run version:patch && npm run release",
    "release:minor": "npm run version:minor && npm run release",
    "release:major": "npm run version:major && npm run release"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "fast-glob": "^3.3.2"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "tsup": "^8.5.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "storybook",
    "mcp",
    "model-context-protocol",
    "code-generation",
    "react",
    "component-library",
    "testing"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/effinrich/storybook-mcp-v2.git"
  },
  "bugs": {
    "url": "https://github.com/effinrich/storybook-mcp-v2/issues"
  },
  "homepage": "https://forgekit.cloud"
}
